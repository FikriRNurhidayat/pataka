        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "enabled_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "v1FeatureStatus": {
      "type": "string",
      "enum": [
        "FEATURE_STATUS_UNSPECIFIED",
