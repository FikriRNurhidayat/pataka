  "paths": {
    "/v1/features": {
      "get": {
        "summary": "List Features",
        "description": "Retrieve feature collections.",
        "operationId": "ListFeatures",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1ListFeaturesResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "page_number",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "page_size",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "sort",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "q",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": [
              "FEATURE_STATUS_UNSPECIFIED",
              "FEATURE_STATUS_ENABLED",
              "FEATURE_STATUS_DISABLED"
            ],
            "default": "FEATURE_STATUS_UNSPECIFIED"
          }
        ],
        "tags": [
          "Features"
        ]
      },
      "post": {
        "summary": "Create Feature",
        "description": "Add new feature resource in your feature flags system.\nCan be toggled on and off on [UpdateFeature](/#/UpdateFeature).",
        "operationId": "CreateFeature",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1CreateFeatureResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1CreateFeatureRequest"
            }
          }
        ],
        "tags": [
          "Features"
        ]
      }
    },
    "/v1/features/{name}": {
      "get": {
        "summary": "Get Feature",
        "description": "Retrieve feature resource by it's name. It will return feature object,\nand enabled or disabled state.",
        "operationId": "GetFeature",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetFeatureResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Features"
        ]
      },
      "delete": {
        "summary": "Delete Feature",
        "description": "Delete a feature resource.",
        "operationId": "DeleteFeature",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1DeleteFeatureResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Features"
        ]
      },
      "put": {
        "summary": "Update Feature",
        "description": "Update a feature resource, usually being used to toggle on and off.",
        "operationId": "UpdateFeature",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UpdateFeatureResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "enabled": {
                  "type": "boolean"
                }
              },
              "title": "rpc UpdateFeature"
            }
          }
        ],
        "tags": [
          "Features"
        ]
      }
    }
  },
